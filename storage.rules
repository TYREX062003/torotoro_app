rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return isSignedIn() && request.auth.token.role == 'admin'; }

    // Categorías
    match /categories/{catId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // POIs
    match /pois/{poiId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Otros paths: lectura pública, escritura solo admin
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
